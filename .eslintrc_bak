{
  "parser": "babel-eslint",
  "plugins": ["eslint-config-airbnb"],
  "extends": "airbnb",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "quotes": [0],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "no-undef": 2,
    "no-unused-vars": 1,
    "camelcase": 1,
    "curly": 0
  },
  "ecmaFeatures": {
    "modules": true,
    "blockBindings": true
  },
  "globals": {
    "FB": true,
    "sinon": true,
    "chai": true,
    "assert": true,
    "expect": true,
    "should": true
  }
}